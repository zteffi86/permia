{
  "name": "permia",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "postinstall": "pnpm -r install && pnpm sdk:gen",
    "sdk:gen": "pnpm --filter @permia/sdk build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "build": "turbo build",
    "rules:validate": "pnpm --filter @permia/rules-validator validate",
    "dev:backend": "docker-compose up -d && cd apps/backend && uvicorn src.main:app --reload",
    "dev:frontend": "pnpm --filter @permia/frontend dev",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.1.0",
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.11.0"
  }
}
